<div class="sessions pb-5">
  <div class="container pt-6">

    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="table-responsive">
            <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
              <thead>
                <tr>
                  <th><%= t("manage_users.table.user") %></th>
                  <th class="text-left"><%= t("manage_users.table.email") %></th>
                  <th class="text-left"><%= t("manage_users.table.provider") %></th>
                  <th class="text-left"><%= t("manage_users.table.role") %></th>
                  <th class="text-center"><i class="icon-settings"></i></th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user|%>
                  <%= render 'admin/components/manage_user_row', user: user %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>