<%= form_for @user, url: customize_user_path, method: :patch do |f|  %>
  <%= hidden_field_tag :setting, "account" %>
  <div class="form-group">

    <%= f.label t("settings.design.header_label"), class: "form-label" %>
    <%= f.text_field :provider, class: "form-control" %>
    <br>

    <%= f.label t("settings.design.background_label"), class: "form-label" %>
    <%= f.file_field :picture %>
    <br>

  </div>
  <div class="card-footer">
    <%= f.submit t("update"), class: "btn btn-primary float-right" %>
  </div>
<% end %>
